#!/bin/sh

# swank [ script  [ arg ... ] ]
# 
# optional environment variables:
#
# JAVA_HOME  - directory of JDK/JRE, if not set then 'java' must be found on PATH
# CLASSPATH  - colon separated list of additional jar files & class directories
# JAVA_OPTS  - list of JVM options, e.g. "-Xmx256m -Dfoo=bar"
#

nvjver=${project.version}
nvjmain=org.python.util.jython
iscygwin=false
ismsys=false
case "`uname`" in
    CYGWIN*) iscygwin=true ;;
    MINGW*) ismsys=true ;;
esac

JAVA=java
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java"  ] ; then
        # AIX location
        JAVA="$JAVA_HOME/jre/sh/java"
    else
        JAVA="$JAVA_HOME/bin/java"
    fi
fi

if [ -n "$NMRFXSTR_MEMORY" ] ; then
    HEAP_MEM=$NMRFXSTR_MEMORY
else
    HEAP_MEM="512"
fi

# get the directory path of this script
# resolve script symlink, if any
pgm="$0"
while [ -h "$pgm" ]; do
    ls=`ls -ld "$pgm"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        pgm="$link"
    else
        pgm=`dirname "$PRG"`/"$link"
    fi
done

dir=`dirname $pgm`
CLASSPATH=${classpath}
# set classpath, or add to existing
if [ -z "$CLASSPATH" ] ; then
    CLASSPATH="$dir/structure-$nvjver.jar"
    if $iscygwin ; then
        CLASSPATH=`cygpath -pw "$CLASSPATH"`
    fi
else
    if $ismsys ; then
        nvjdir=`$dir/echopath "$dir"`
        CLASSPATH="$nvjdir/structure-$nvjver.jar;$CLASSPATH"
    elif $iscygwin ; then
        CLASSPATH=`cygpath -pu "$CLASSPATH"`
        CLASSPATH="$dir/structure-$nvjver.jar;$CLASSPATH"
        CLASSPATH=`cygpath -pw "$CLASSPATH"`
    else
        CLASSPATH="$dir/structure-$nvjver.jar:$CLASSPATH"
    fi
fi

export CLASSPATH
if [ "$#" -eq 0 ]; then
    #exec "$JAVA"  --add-opens java.base/sun.nio.ch=ALL-UNNAMED --add-opens java.base/java.io=ALL-UNNAMED -Djava.awt.headless=true -mx${HEAP_MEM}m -cp "$CLASSPATH" $JAVA_OPTS $nvjmain ${1+"$@"}
    exec "$JAVA"  -Djava.awt.headless=true -mx${HEAP_MEM}m -cp "$CLASSPATH" $JAVA_OPTS $nvjmain ${1+"$@"}
else
    #exec "$JAVA"  --add-opens java.base/sun.nio.ch=ALL-UNNAMED --add-opens java.base/java.io=ALL-UNNAMED -Djava.awt.headless=true -mx${HEAP_MEM}m -cp "$CLASSPATH" $JAVA_OPTS $nvjmain -c "import dispatchnvfx" ${1+"$@"}
    exec "$JAVA"  -Djava.awt.headless=true -mx${HEAP_MEM}m -cp "$CLASSPATH" $JAVA_OPTS $nvjmain -c "import dispatchnvfx" ${1+"$@"}
fi
